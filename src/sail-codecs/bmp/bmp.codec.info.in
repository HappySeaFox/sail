# BMP codec information
#
[codec]
layout=4
version=1.1.2
name=BMP
description=Bitmap Picture
magic-numbers=42 4d;02 00
extensions=bmp;ddb;dib
mime-types=image/bmp;image/x-bmp

[read-features]
features=STATIC;META-DATA
output-pixel-formats=SOURCE;BPP32-RGBA;BPP32-BGRA
default-output-pixel-format=@SAIL_DEFAULT_READ_OUTPUT_PIXEL_FORMAT@

[write-features]
features=
properties=
interlaced-passes=
compression-types=
default-compression=
compression-level-min=0
compression-level-max=0
compression-level-default=0
compression-level-step=0

[write-pixel-formats-mapping]
